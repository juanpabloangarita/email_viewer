<p id="notice"><%= notice %></p>


<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h1>List</h1>

      <table>
        <thead>
          <tr>
            <th>Object</th>
            <th>Read</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @emails.each do |email| %>
            <tr>
              <td><%= email.object %></td>
              <td><%= email.read %></td>
              <td><%= link_to 'Show', email %></td>
              <td><%= link_to 'Edit', edit_email_path(email) %></td>
              <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' },
              :remote => true, :class => 'delete_email' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Email', new_email_path %>
    </div>

    <div class="col-lg-6">
      <h1>Content</h1>
      <p>The content here</p>
    </div>
      
  </div>
</div>


